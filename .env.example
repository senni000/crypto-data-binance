# SQLite database configuration
DATABASE_PATH=~/Volume/buffakohd/binance_data.sqlite
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_PATH=~/Volume/buffakohd/backups
DATABASE_BACKUP_INTERVAL_MS=86400000

# Binance API endpoints
BINANCE_REST_URL=https://api.binance.com
BINANCE_USDM_REST_URL=https://fapi.binance.com
BINANCE_COINM_REST_URL=https://dapi.binance.com
BINANCE_WS_URL=wss://stream.binance.com:9443/ws
BINANCE_USDM_WS_URL=wss://fstream.binance.com/ws
BINANCE_COINM_WS_URL=wss://dstream.binance.com/ws

# Collector runtime tuning
RATE_LIMIT_BUFFER=0.1
REST_REQUEST_TIMEOUT_MS=10000
WS_RECONNECT_INTERVAL_MS=5000
WS_MAX_SYMBOLS_PER_STREAM=300
SYMBOL_UPDATE_HOUR_UTC=1

# Logging
LOG_LEVEL=info
